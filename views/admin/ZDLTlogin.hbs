<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Responsive Login Form </title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap">
    <link rel="stylesheet" type="text/css" href="stylesheets/adminLogin.css" />
   
</head>

<body>
    <section class="container forms">
        <div class="form login">
            <div class="form-content">
                <header>Admin Login</header>
                 <p id="display" style="color: green; text-align: center; "></p>
                <form action="adminLogin" method="post">
                    <div class="field input-field">
    
                        <input type="text" placeholder="Admin Name" class="input" name="userName" value="{{adminName}}">
                    </div>
                    <small style="color: red;">{{name}}</small>
                    <div class="field input-field">
                        <input type="password" placeholder="Password" class="password" name="password" value="{{adminpassword}}">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>
                    <small style="color: red;">{{password}}</small>

                    <div class="form-link">
                        <a href="/admin/passwordReset" class="forgot-pass">Forgot password?</a>
                    </div>

                    <div class="field button-field">
                        <button>Login</button>
                    </div>
                </form>

               
            </div>
        </div>
    </section>
      <script>
              

        const urlParams = new URLSearchParams(window.location.search);
        if(urlParams.get('display')==='true'){
            document.getElementById('display').innerHTML="Password Successfully Changed"
        }
    </script>
</body>
</html>












