		{{!-- BRANDS --}}
		<div class="colorlib-partner">
			<div class="container">
				<div class="row">
					<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
						<h2>Trusted Partners</h2>
					</div>
				</div>
				<div class="row" style="row-gap: 50px;">
					{{#each brands}}
					<div class="col-12 col-md-6 col-lg-3 text-center">
						<img src="{{this.brandImage}}" class="img-fluid" alt="{{this.brandName}}">

					</div>
					{{/each}}
				</div>
			</div>
		</div>
		{{!-- BRANDS END --}}


<form style="visibility:hidden;"  id="productForm" action="/productDetails" method="post">
	<input type="hidden" value="" name="productId">
	<button type="submit"></button>
</form>


	</div>


	{{!-- MY SCRIPT --}}
	<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
	<script>
       
	   function formAct(ProductId){
	//	alert(ProductId)
		$('input[name=productId]').val(ProductId);
       $('#productForm').submit();

	   }


		$(document).ready(function () {
			$(".btn-primary").on("click", function () {
				$("#all").toggle();
				let text = $("#all").is(":visible") ? "Close all Products" : "Show All Products"
				$(".btn-primary").text(text);
			});

		});


	</script>
	{{!-- MY SCRIPT END--}}

</body>